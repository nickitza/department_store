<h1> <%= @item.id ? "Edit Item" : "Create New Item" %>  </h1>
<hr />
<%= form_for [@department, @item] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :in_stock %>
  <%= f.text_field :in_stock %>
  <br />
  <%= f.submit %>
<% end %>